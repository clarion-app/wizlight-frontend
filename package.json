{
  "name": "@clarion-app/wizlight-frontend",
  "version": "1.0.9",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "rm -rf dist; tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clarion-app/wizlight-frontend.git"
  },
  "author": "Tim Schwartz <tim@metaverse.systems>",
  "license": "MIT",
  "dependencies": {
    "@clarion-app/types": "^1.0.4",
    "@reduxjs/toolkit": "^2.2.6",
    "@uiw/react-color-wheel": "^2.3.0",
    "react": "^18.3.1",
    "react-redux": "^9.1.2",
    "react-router-dom": "^6.24.1",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5"
  },
  "devDependencies": {
    "@types/react": "^18.3.2"
  },
  "customFields": {
    "initializer": "initializeWizlightFrontend",
    "api": "wizlightFrontendApi",
    "routes": [
      {
        "path": "/clarion-app/wizlight/bulbs",
        "element": "<Bulbs />"
      },
      {
        "path": "/clarion-app/wizlight/rooms",
        "element": "<Rooms />"
      },
      {
        "path": "/clarion-app/wizlight/rooms/:name",
        "element": "<Room />"
      }
    ],
    "menu": {
      "name": "Wizlight",
      "entries": [
        {
          "name": "Bulbs",
          "path": "/clarion-app/wizlight/bulbs"
        },
        {
          "name": "Rooms",
          "path": "/clarion-app/wizlight/rooms"
        }
      ]
    },
    "eventChannels": {
      "clarion-app-wizlights": "handleWebsocketEvent"
    }
  }
}
